@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Movie

@{
    ViewData["Title"] = "Movie Details";
}

<h3>Movie Details</h3>

<div>
    <hr>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieDetail.Rate)
        </dt>
        <dd class="col-sm-10">
            @if (Model.MovieDetail.Rate != null)
            {
                @Html.DisplayFor(model => model.MovieDetail.Rate)
            }
            else
            {
                <span class="text-black-50">No rating yet.</span>
            }
        </dd>
        <dt class="col-sm-2">
            <hr>
            @Html.DisplayNameFor(model => model.MovieDetail.Title)
        </dt>
        <dd class="col-sm-10">
            <hr>
            @Html.DisplayFor(model => model.MovieDetail.Title)
        </dd>
        <dt class="col-sm-2">
            <hr>
            @Html.DisplayNameFor(model => model.MovieDetail.Date)
        </dt>
        <dd class="col-sm-10">
            <hr>
            @Html.DisplayFor(model => model.MovieDetail.Date)
        </dd>
        <dt class="col-sm-2">
            <hr>
            @Html.DisplayNameFor(model => model.Actors)
        </dt>
        <dd class="col-sm-10">
            <hr>
            @foreach (Actor actor in Model.Actors)
            {
                <a asp-controller="Actor" asp-action="Details" asp-route-id="@actor.Id">
                    @Html.DisplayFor(modelItem => actor.Name)
                    @Html.DisplayFor(modelItem => actor.Surname)
                </a>
                <br>
            }
        </dd>
        <dt class="col-sm-2">
            <hr>
            @Html.DisplayNameFor(model => model.Genres)
        </dt>
        <dd class="col-sm-10">
            <hr>
            @{
                foreach (Genre genre in Model.Genres)
                {
                    <a asp-controller="Genre" asp-action="Details" asp-route-id="@genre.Id">
                        @Html.DisplayFor(modelItem => genre.Name)
                    </a>
                    <br>
                }
            }
        </dd>
    </dl>
</div>

<div class="border align-content-center">
    <video width="480" height="270" controls>
        <source src="https://media.geeksforgeeks.org/wp-content/uploads/20190616234019/Canvas.move_.mp4" type="video/mp4">
    </video>
</div>

<hr>
<partial name="_RateMoviePartial" model="Model.MovieDetail"/>
<hr>
<partial name="_MovieCommentsPartial" model="Model.MovieDetail"/>