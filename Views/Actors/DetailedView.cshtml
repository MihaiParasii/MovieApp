@model Actor

@{
    ViewBag.Title = "Actor Details";
    Layout = "_Layout";
}

<h2>Actor</h2>

<div class="text-center">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h6 class="d-block">Id: @Model.Id</h6>
                <h4 class="card-title">@Model.Name, @Model.Surname</h4>
                <h6 class="card-subtitle">@Model.BirthDate</h6>
            </div>
            <form asp-controller="Movies" asp-action="Index" method="get">
                <input type="text" name="actorId" value="@Model.Id" hidden="hidden">
                <button class="btn btn-outline-dark" type="submit">Show movies with this actor</button>
            </form>
        </div>
    </div>
</div>