@model List<Movie>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
    ViewData["Title"] = "All Movies";
}

<div class="text-center">
    <h2 class="display-4">Search Movie</h2>
</div>

<div class="text-left">
    <form asp-area="" asp-controller="Movies" asp-action="Index" method="get">
        <div class="form-check">
            <h3>Genres</h3>
            @{
                foreach (Genre genre in (ICollection<Genre>)ViewData["Genres"]!)
                {
                    <input class="form-check-input" type="checkbox" name="genreType" value="@genre.Id" id="actionCheckbox">
                    <label class="form-check-label" for="actionCheckbox">
                        @genre.Name
                    </label>
                    <br>
                }
            }
        </div>
        <div class="form-check">
            <h3>Sort By:</h3>
            <label class="form-check-label" for="releaseDateRadio">
                <input class="form-check-input" type="radio" name="sortType" id="releaseDateRadio" value="releaseDate" checked="checked">
                Released Date
            </label>
            <br>
            <label class="form-check-label" for="titleRadio">
                <input class="form-check-input" type="radio" name="sortType" id="titleRadio" value="title">
                Title
            </label>
            <br>
            <label class="form-check-label" for="rateRadio">
                <input class="form-check-input" type="radio" name="sortType" id="rateRadio" value="rate">
                Rate
            </label>
        </div>
        <button class="btn-outline-primary" type="submit">
            Submit
        </button>
    </form>


    <div class="container">
        <div class="row row-cols-1 row-cols-2 g-3">
            @foreach (Movie movie in Model)
            {
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@movie.MovieDetail.Title</h5>
                            <br>
                            <form asp-area="" asp-controller="Movies" asp-action="DetailedView" method="get">
                                <input type="number" name="id" hidden="hidden" value="@movie.MovieDetail.MovieId">
                                <button class="btn btn-primary" type="submit">Get Details</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>