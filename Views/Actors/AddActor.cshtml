@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Add Actor</h2>

<form class="form" asp-controller="Actors" asp-action="AddActorToDb">
    <input class="input-group-text" style="width: 30%;" type="text" name="name" placeholder="Input name" required>
    <br>
    <input class="input-group-text" style="width: 30%;" type="text" name="surname" placeholder="Input surname" required>
    <br>
    <input class="input-group-text" style="width: 30%;" type="date" name="birthDate" placeholder="Select Date" required>
    <br>
    <button class="btn btn-success" type="submit">Add</button>
</form>